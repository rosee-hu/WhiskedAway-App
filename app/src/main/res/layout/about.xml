<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6ECD8"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C6735"
        android:text="Go Back"
        android:layout_marginBottom="40dp" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="About us"
        android:textColor="#6D250E"
        android:layout_marginBottom="40dp" />

    <!-- Description Text -->


    <!-- Location Title Text -->
    <EditText
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Whisked Away is your go-to bakery app, offering a wide range of freshly baked goods for delivery or pick-up, crafted with high-quality ingredients to satisfy your cravings wherever you are."
        android:textColor="#6D250E"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Where you can find us"
        android:textColor="#6D250E"
        android:layout_marginBottom="40dp" />

    <!-- MapView -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="40dp" />
</LinearLayout>
